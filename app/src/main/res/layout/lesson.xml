<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#B2DFDB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/timer_text"
        android:layout_weight="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textview_animal_name_detail"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0" />

    <ScrollView
        android:id="@+id/scrollview_choices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_below="@id/textview_animal_name_detail"
        android:scrollIndicators="right"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"

        android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="New Text"
        android:id="@+id/textView_short_desc"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_weight="0.82"
        android:scrollIndicators="right" />
    </ScrollView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#B2DFDB"
        android:layout_weight="0">
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_back"

        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:id="@+id/button_exercise"
        android:layout_gravity="right"
        android:layout_weight="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:id="@+id/button_quiz"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />
        </LinearLayout>
</LinearLayout>